<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:id="@+id/etCalculations"
        android:textAlignment="textEnd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="C"
            android:id="@+id/btnClear"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:id="@+id/btnDelete"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="%"
            android:id="@+id/btnPer"
            android:onClick="operatorClicked"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="/"
            android:id="@+id/btnDiv"
            android:onClick="operatorClicked"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7"
            android:id="@+id/btn7"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="8"
            android:id="@+id/btn8"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="9"
            android:id="@+id/btn9"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="*"
            android:id="@+id/btnMult"
            android:onClick="operatorClicked"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4"
            android:id="@+id/btn4"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5"
            android:id="@+id/btn5"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="6"
            android:id="@+id/btn6"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-"
            android:id="@+id/btnMinus"
            android:onClick="operatorClicked"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:id="@+id/btn1"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="2"
            android:id="@+id/btn2"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="3"
            android:id="@+id/btn3"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+"
            android:id="@+id/btnPluss"
            android:onClick="operatorClicked"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0"
            android:id="@+id/btn0"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="."
            android:id="@+id/btnDot"
            android:onClick="numberButton"
            />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="="
            android:id="@+id/btnEqual"
            />
    </LinearLayout>

</LinearLayout>