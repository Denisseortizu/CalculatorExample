<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners  android:radius="50dp"/>
    <solid android:color="@color/purple_700"></solid>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#C3102746"/>
                    <corners android:radius="15dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="15px">
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="#771E4148"
                        android:endColor="#9E060D0E"
                        android:angle="270" />
                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</shape>